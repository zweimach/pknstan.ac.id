{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "extends": [
        "plugin:react/recommended",
        "plugin:jsx-a11y/strict",
        "prettier/react"
      ],
      "plugins": ["react-hooks"],
      "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
      }
    }
  ]
}
